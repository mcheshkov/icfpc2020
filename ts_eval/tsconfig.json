{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        // TODO use "importHelpers": true, "noEmitHelpers": false, lint all TS packages to have tslint dependency, add tslib to check-depend
        "importHelpers": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": false,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
//        "noUnusedLocals": true,
//        "noUnusedParameters": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "*": ["./typings/*"]
        },

        "rootDir": "src",
        "outDir": "build"
    }
}
